@page
@model cse3055.Pages.Orders.AddModel
@{
}

<br>
<br>


<div class="container">

    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div class="alert alert-warning alert-dismissible fade show mt-3" role="alert">
            <strong>@Model.ErrorMessage</strong>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    <form method="post">
        <div class="row">
            <div class=" col-md-12 col-lg-6 ">

                <h2>ADD NEW ORDER</h2>
                <br><br>
                <div class="col-sm-12 mb-3">
                    <input type="text" class="form-control required" name="OrderID" placeholder="Order ID" value="">
                </div>
                <div class="col-sm-12 mb-3">
                    <input type="text" class="form-control required" name="CustomerID" placeholder="Customer ID" value="">
                </div>
                <div class="col-sm-12 mb-3">
                    <input type="text" class="form-control required" name="OrderDate" placeholder="Order Date" value="">
                </div>
                <div class="col-sm-12 mb-3">
                    <input type="text" class="form-control required" name="DeliveryAddress" placeholder="Delivery Address" value="">
                </div>
                <div class="col-sm-12 mb-3">
                    <input type="number" class="form-control required" name="TotalCost" placeholder="Total Cost" value="">
                </div>
                <div class="col-sm-12 mb-3">
                    <input type="text" class="form-control required" name="Status_" placeholder="Status" value="">
                </div>

                @if (!string.IsNullOrEmpty(Model.successMessage))
                {
                    <div class="alert alert-success mt-3" role="alert">
                        @Model.successMessage
                    </div>
                }
                <button type="submit" class="btn btn-danger">Submit</button>
            </div>
    </form>


</div>
