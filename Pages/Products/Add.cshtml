@page
@model cse3055.Pages.Products.AddModel
@{
}

<br>
<br>


<div class="container">

    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div class="alert alert-warning alert-dismissible fade show mt-3" role="alert">
            <strong>@Model.ErrorMessage</strong>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    <form method="post">
        <div class="row">
            <div class=" col-md-12 col-lg-6 ">

                <h2>ADD NEW PRODUCT</h2>
                <br><br>
                <div class="col-sm-12 mb-3">
                    <input type="text" class="form-control required" name="ProductID" placeholder="Product ID" value="">
                </div>
                <div class="col-sm-12 mb-3">
                    <input type="text" class="form-control required" name="Material" placeholder="Material" value="">
                </div>
                <div class="col-sm-12 mb-3">
                    <input type="text" class="form-control required" name="VerticalSectionType" placeholder="Vertical Section Type" value="">
                </div>
                <div class="col-sm-12 mb-3">
                    <input type="text" class="form-control required" name="VerticalSectionSize" placeholder="Vertical Section Size" value="">
                </div>
                <div class="col-sm-12 mb-3">
                    <input type="text" class="form-control required" name="Alloy" placeholder="Alloy" value="">
                </div>
                <div class="col-sm-12 mb-3">
                    <input type="number" class="form-control required" name="SpecificWeightInKG" placeholder="Specific Weight in KG" value="">
                </div>
                <div class="col-sm-12 mb-3">
                    <input type="number" class="form-control required" name="LengthInMeters" placeholder="Length in Meters" value="">
                </div>
                <div class="col-sm-12 mb-3">
                    <input type="number" class="form-control required" name="WeightOnePieceInKG" placeholder="Weight One Piece in KG" value="">
                </div>
                <div class="col-sm-12 mb-3">
                    <input type="number" class="form-control required" name="UnitPrice" placeholder="Unit Price" value="">
                </div>

                @if (!string.IsNullOrEmpty(Model.successMessage))
                {
                    <div class="alert alert-success mt-3" role="alert">
                        @Model.successMessage
                    </div>
                }
                <button type="submit" class="btn btn-danger">Submit</button>
            </div>
    </form>


</div>
