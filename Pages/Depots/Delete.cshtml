@page
@using System.Data.SqlClient
@using System.Data

@{
    try
    {
        String depotID = Request.Query["DepotID"];
        string connectionString = "Data Source=MUZLAC;Initial Catalog=Database_Project;Integrated Security=True;";

        using (SqlConnection connection = new SqlConnection(connectionString))
        {
            connection.Open();

            using (SqlCommand command = new SqlCommand("DepotEdit", connection))
            {
                command.CommandType = CommandType.StoredProcedure;

                // Add the parameters for the stored procedure
                command.Parameters.AddWithValue("@SelectOption", "Delete");
                command.Parameters.AddWithValue("@DepotID", Convert.ToInt32(depotID));

                command.ExecuteNonQuery();
            }

            connection.Close();
        }
    }
    catch (SqlException ex)
    {
        // Handle exceptions or errors
        Console.WriteLine("An error occurred: " + ex.Message);
        Response.Redirect("/Customers/ss");
    }

}
